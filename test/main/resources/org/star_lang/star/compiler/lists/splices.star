splices is package {
  main () do {
    logMsg(info,"testing array splices");
    var a := array of {0;1};
    a[2:2] := array of {99};
    assert a=array of {0;1;99};

    var b := array of {0;1};
    b[2:1] := array of {99};
  }
}
